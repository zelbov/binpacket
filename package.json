{
  "name": "binpacket",
  "version": "0.0.4",
  "type": "module",
  "description": "Binary data builder/parser with decorators support for structures definition",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "npx tsc && npx webpack --config=webpack.config.cjs",
    "watch": "npx tsc --watch",
    "test": "npx mocha -r esm -r module-alias/register --experimental-json-modules --experimental-loader=./test/esm-aliases.mjs --es-module-specifier-resolution=node --reporter mocha-multi-reporters --reporter-options configFile=test/config.json,cmrOutput=mocha-junit-reporter+mochaFile+test ./dist/test/unit/*.test.js",
    "test:browser": "npx webpack --config=test/browser/webpack.config.cjs && npx karma start test/browser/karma.conf.cjs",
    "bench": "npx mocha -r esm -r module-alias/register --experimental-json-modules --experimental-loader=./test/esm-aliases.mjs --es-module-specifier-resolution=node --reporter mocha-multi-reporters --reporter-options configFile=test/config.json,cmrOutput=mocha-junit-reporter+mochaFile+bench ./dist/test/benchmark/*.test.js",
    "ci": "circleci config process .circleci/config.yml > temp/processed.yml && circleci local execute -v $(pwd)/temp/project:/root/project -c temp/processed.yml",
    "clean": "rm -rf ./dist && rm -rf ./umd",
    "prepublish": "npm run clean && npm run build",
    "lint": "npx eslint --ext ts"
  },
  "engines": {
    "node": ">= 12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zelbov/binpacket.git"
  },
  "author": "https://github.com/zelbov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zelbov/binpacket/issues"
  },
  "homepage": "https://github.com/zelbov/binpacket#readme",
  "_moduleAliases": {
    "binpacket": "dist/src/index.js",
    "binpacket/buffer-polyfill": "dist/src/polyfills/BufferPolyfill.js"
  },
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": "./dist/src/index.js",
    "./*": null,
    "./dist": null,
    "./umd": null,
    "./buffer-polyfill": "./dist/src/polyfills/BufferPolyfill.js"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/src/index.d.ts"
      ],
      "buffer-polyfill": [
        "./dist/src/polyfills/BufferPolyfill.d.ts"
      ],
      "./*": []
    }
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.42",
    "@types/webpack-env": "^1.17.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "buffer": "^6.0.3",
    "chai": "^4.3.6",
    "esm": "^3.2.25",
    "karma": "^6.4.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-source-map-support": "^1.4.0",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-spec-reporter": "^0.0.34",
    "mocha": "^9.2.1",
    "mocha-junit-reporter": "^2.0.2",
    "mocha-multi-reporters": "^1.5.1",
    "module-alias": "^2.2.2",
    "process": "^0.11.10",
    "source-map-loader": "^4.0.0",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.5.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.4",
    "util": "^0.12.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  }
}
