{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "binpacket": ["./src"],
        },
        "strict": true,
        "removeComments": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["./src", "./test"],
    "exclude": ["node_modules", "./test/esm-aliases.mjs", "./test/browser"]
}