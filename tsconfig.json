{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "esnext",
        "module": "CommonJS",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "binpacket": ["./src/index.ts"],
            "binpacket/types": ["./src/module_typings/index.ts"]
        },
        "strict": true,
        "removeComments": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["./src", "./test"],
    "exclude": [
        "node_modules",
        "./src/umd.ts",
        "./test/esm-aliases.mjs", "./test/browser"
    ]
}